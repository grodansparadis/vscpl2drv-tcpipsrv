{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build vscpl2drv-tcpipsrv",
            "type": "shell",
            "windows": {
                "command": ".\\build-windows.bat"
            },
            "linux": {
                "command": "./build-unix.sh"
            },
            "osx": {
                "command": "./build-unix.sh"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile", "$gcc"]
        },
        {
            "label": "clean & build vscpl2drv-tcpipsrv",
            "type": "shell",
            "windows": {
                "command": "powershell.exe",
                "args": [
                    "-Command",
                    "if (Test-Path build) { Remove-Item -Recurse -Force build }; .\\build-windows.bat"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "rm -rf build && ./build-unix.sh"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "rm -rf build && ./build-unix.sh"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$msCompile", "$gcc"]
        },
        {
            "label": "build package",
            "type": "shell",
            "windows": {
                "command": "powershell.exe",
                "args": [
                    "-Command",
                    "cd build; cpack"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "cd build && cpack"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "cd build && cpack"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$msCompile", "$gcc"]
        }
      ]
}