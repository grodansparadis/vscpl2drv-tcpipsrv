#!/usr/bin/make -f

%:
	dh $@ --with autoreconf

override_dh_shlibdeps:
	dpkg-shlibdeps -Tdebian/vscpl2drv-tcpipsrv.substvars $$(pwd)/debian/vscpl2drv-tcpipsrv/var/lib/vscp/drivers/level2/vscpl2drv-tcpipsrv.so.%MAJOR-VERSION.%MINOR-VERSION.%RELEASE-VERSION


override_dh_auto_install:
	strip linux/vscpl2drv-tcpipsrv.so.%MAJOR-VERSION.%MINOR-VERSION.%RELEASE-VERSION

